<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CodedByKay.PowerPatrol.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CodedByKay.PowerPatrol"
    xmlns:pages="clr-namespace:CodedByKay.PowerPatrol.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="CodedByKay.PowerPatrol">

    <!-- Define the TabBar for bottom tabs -->
    <TabBar>

        <!-- Tab for the Tibber Page -->
        <Tab Title="Tibber" Icon="tibber.png">
            <ShellContent ContentTemplate="{DataTemplate pages:TibberPage}" />
        </Tab>

        <!-- Tab for the Easee Page -->
        <Tab Title="Easee" Icon="easee.png">
            <ShellContent ContentTemplate="{DataTemplate pages:EaseePage}" />
        </Tab>

    </TabBar>
</Shell>
